{
  "name": "components-web-app",
  "version": 2,
  "env": {
    "HOST": "0.0.0.0",
    "NODE_ENV": "production",
    "API_URL": "https://api.cwa.silverbackwebapps.com",
    "API_URL_BROWSER": "https://api.cwa.silverbackwebapps.com",
    "COOKIE_SECRET": "@cwa-cookie-secret",
    "APP_DATABASE_URL": "@cwa-db-url",
    "VARNISH_TOKEN": "@cwa-varnish-token",
    "COOKIE_DOMAIN": "cwa.silverbackwebapps.com"
  },
  "build": {
    "env": {
      "HOST": "0.0.0.0",
      "NODE_ENV": "production",
      "API_URL": "https://api.cwa.silverbackwebapps.com",
      "API_URL_BROWSER": "https://api.cwa.silverbackwebapps.com",
      "COOKIE_SECRET": "@cwa-cookie-secret",
      "APP_DATABASE_URL": "@cwa-db-url",
      "VARNISH_TOKEN": "@cwa-varnish-token",
      "COOKIE_DOMAIN": "cwa.silverbackwebapps.com"
    }
  },
  "builds": [
    {
      "src": "app/nuxt.config.js",
      "use": "@nuxtjs/now-builder",
      "config": {
        "serverFiles": ["server/index.js"]
      }
    },
    {
      "src": "app/static/**",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/images/(.*)",
      "headers": { "cache-control": "public, max-age=120, s-maxage=604800" },
      "dest": "/images/$1"
    },
    {
      "src": "/icons/(.*)",
      "headers": { "cache-control": "public, max-age=120, s-maxage=604800" },
      "dest": "/icons/$1"
    },
    {
      "src": "(/favicon\\.ico|/icon\\.(svg|png))",
      "headers": { "cache-control": "public, max-age=120, s-maxage=604800" },
      "dest": "$1"
    }
  ]
}
