        "@fortawesome/vue-fontawesome": "^0.1.1",
        "@nuxtjs/axios": "^5.0.0",
        "@nuxtjs/component-cache": "^1.1.3",
        "@nuxtjs/google-tag-manager": "^2.1.0",
        "@nuxtjs/pwa": "^2.6.0",
        "body-parser": "^1.18.3",
        "bulma": "^0.7.2",
        "compression": "^1.7.3",
        "connect-session-sequelize": "^6.0.0",
        "cookie-parser": "^1.4.3",
        "express": "^4.16.3",
        "express-session": "^1.15.6",
        "flatpickr": "^4.5.4",
        "helmet": "^3.14.0",
