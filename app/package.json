        "eslint-plugin-prettier": "2.6.2",
        "eslint-plugin-vue": "^4.0.0",
        "jest": "^24.9.0",
        "node-sass": "^4.12.0",
        "nodemon": "^1.11.0",
        "prettier": "1.14.3",
        "sass-loader": "^7.3.1",
        "vue-jest": "^2.6.0",
        "vue-template-compiler": "^2.5.17"
